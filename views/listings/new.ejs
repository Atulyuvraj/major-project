<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <body>
    <h2>Create new listing:</h2>
    <form method="post" action="/listingss"  class="needs-validation" novalidate enctype="multipart/form-data">
       <div class="mb-3">
         <label for="title" class="form-label">Title</label>
        <input name="title" type="text" placeholder="enter title" class="form-control" required>
      <div class="valid-feedback">
        Title looks good!
        </div>    
      </div>
        <br />
       <div  class="mb-3">
         <label for="description" class="form-label">Description</label>
         <textarea name="description" placeholder="enter description" class="form-control" required></textarea>
         <div class="invalid-feedback">
        Please give a short discription!
        </div>  
       </div>
        <br />
         <div  class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="price" type="number" placeholder="enter price" class="form-control" required>
            <div class="invalid-feedback">
        Please give the price
        </div>
         </div>
         <br />
          <div  class="mb-3">
            <label for="image" class="form-label">image/url</label>
        <input name="image" type="file" placeholder="enter the image/url"  class="form-control">
          </div>
        <br  />
         <div  class="mb-3">
            <label for="location" class="form-label">location</label>
        <input name="location" type="text" placeholder="enter location" class="form-control" required>
        <div class="invalid-feedback">
        Please enter a valid location
        </div>
         </div>
         <br />
         <div  class="mb-3">
            <label for="country" class="form-label">country</label>
        <input name="country" type="text" placeholder="enter country" class="form-control" required>
        <div class="invalid-feedback">
        Please enter a valid country name
        </div>
         </div>
        <br />
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</body>
    </div>
</div>
</html>